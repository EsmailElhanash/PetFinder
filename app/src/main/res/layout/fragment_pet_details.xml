<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image -->
        <ImageView
            android:id="@+id/petImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="start"
            android:contentDescription="@string/pet_image"
            android:scaleType="centerCrop"/>

        <!-- Text Views for Pet Details -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_xxx"
            android:textSize="22sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="start"/>
        <TextView
            android:id="@+id/sizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size_xxx"
            android:textSize="22sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/colorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color_xxx"
            android:textSize="22sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="start"/>


        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_xxx"
            android:textSize="22sp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="start"/>

        <Button
            android:background="#E9FFEA"
            android:id="@+id/petsWebsiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:text="Pet's Website"
            android:layout_gravity="start"/>
    </LinearLayout>
</ScrollView>
