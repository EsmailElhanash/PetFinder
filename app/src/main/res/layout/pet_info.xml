<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@drawable/pet_info_bg"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Image -->
    <ImageView
        android:contentDescription="@string/pet_image"
        android:src="@drawable/ph"
        android:id="@+id/petPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:padding="15dp"/>

    <!-- Name -->
    <TextView
        android:textSize="18sp"
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_xxx"
        app:layout_constraintStart_toEndOf="@+id/petPhoto"
        app:layout_constraintTop_toTopOf="@+id/petPhoto"
        app:layout_constraintBottom_toTopOf="@+id/genderTextView"
        app:layout_constraintVertical_bias="0.2"/>

    <!-- Gender -->
    <TextView
        android:textSize="18sp"
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender_xxx"
        app:layout_constraintStart_toEndOf="@+id/petPhoto"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintBottom_toTopOf="@+id/typeTextView"
        app:layout_constraintVertical_bias="0.2"/>

    <!-- Type -->
    <TextView
        android:textSize="18sp"
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_xxx"
        app:layout_constraintStart_toEndOf="@+id/petPhoto"
        app:layout_constraintTop_toBottomOf="@+id/genderTextView"
        app:layout_constraintBottom_toBottomOf="@+id/petPhoto"
        app:layout_constraintVertical_bias="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
